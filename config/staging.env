# Staging Environment Configuration - staging.datahubportal.com  
NODE_ENV=staging
PORT=3000
LOG_LEVEL=debug

# API Configuration
API_VERSION=v1
API_BASE_PATH=/v1

# CORS Configuration for staging
ALLOWED_ORIGINS=https://staging.datahubportal.com,https://api.staging.datahubportal.com
CORS_MAX_AGE=600
CORS_CREDENTIALS=false

# Rate Limiting (more lenient for testing)
RATE_LIMIT_MAX_REQUESTS=120
RATE_LIMIT_WINDOW_MS=60000  
FILES_RATE_LIMIT_MAX_REQUESTS=200

# RPC Configuration
RPC_BASE_URL=https://rpc-staging.datahubportal.com
RPC_TIMEOUT_MS=8000

# Security Configuration
STORAGE_SECRET_KEY=staging_secure_secret_key_datahub_portal
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=false  # False for staging
HSTS_PRELOAD=false

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Database/Storage
STORAGE_BASE_URL=https://storage.staging.datahubportal.com
BUCKET_NAME=datahub-portal-files-staging

# Logging
LOG_FORMAT=json
LOG_DESTINATION=stdout