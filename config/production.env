# Production Environment Configuration - datahubportal.com
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
API_BASE_PATH=/v1

# CORS Configuration for datahubportal.com
ALLOWED_ORIGINS=https://datahubportal.com,https://api.datahubportal.com
CORS_MAX_AGE=600
CORS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000
FILES_RATE_LIMIT_MAX_REQUESTS=120

# RPC Configuration  
RPC_BASE_URL=https://rpc-prod.datahubportal.com
RPC_TIMEOUT_MS=5000

# Security Configuration
STORAGE_SECRET_KEY=prod_secure_secret_key_datahub_portal
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Database/Storage
STORAGE_BASE_URL=https://storage.datahubportal.com
BUCKET_NAME=datahub-portal-files-prod

# Logging
LOG_FORMAT=json
LOG_DESTINATION=stdout